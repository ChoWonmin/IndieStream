<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:c="http://www.springframework.org/schema/c" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="*" />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="./view/"></property>
		<property name="suffix" value=".jsp" />
		<property name="order" value="1" />
	</bean>

	<bean id="beanNameViewResolver"
		class="org.springframework.web.servlet.view.BeanNameViewResolver">
		<property name="order" value="0" />
	</bean>

	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="defaultEncoding" value="utf-8" />
		<property name="maxUploadSize" value="-1" /> <!-- 무제한 -->
	</bean>

	<!-- path 설정 -->
	
	<bean name="snsSelectOne.do" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="snsSelectOne.do"></property>
	</bean>

	<bean name="snsSelectAll.do" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="snsSelectAll.do"></property>
	</bean>
	<bean name="mainpage.do" class="org.springframework.web.servlet.view.JstlView">
      <property name="url" value="mainpage.do"></property>
  	</bean>
  	
	<bean name="sortByPostedTime" class="org.springframework.web.servlet.view.json.MappingJacksonJsonView"></bean>
	<bean name="sortByLiker" class="org.springframework.web.servlet.view.json.MappingJacksonJsonView"></bean>
	<bean name="sortByCount" class="org.springframework.web.servlet.view.json.MappingJacksonJsonView"></bean>
	
	
	
	<bean name="JsonView" class="org.springframework.web.servlet.view.json.MappingJacksonJsonView"></bean>
</beans>